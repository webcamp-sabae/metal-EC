<div class="body" style="margin-top: 50px;">
<div class="container">
    <div class="row">
<div class="col-md-8 offset-2">
	<table class="table table-bordered">
		<h4 class="">会員情報</h4>
		<tbody class="text-center">
			<tr>
				<th >名前</th>
				<td ><%= @user.familyname %> <%= @user.firstname %></td>
			</tr>
			<tr>
				<th >フリガナ</th>
				<td ><%= @user.kana_familyname %> <%= @user.kana_firstname %></td>
			</tr>
			<tr>
				<th >郵便番号</th>
				<td ><%= @user.first_postal_code %> - <%= @user.last_postal_code %></td>
			</tr>
			<tr>
				<th >住所</th>
				<td ><%= @user.address %></td>
			</tr>
			<tr>
				<th >電話番号</th>
				<td ><%= @user.telephone_number1 %> - <%= @user.telephone_number2 %> - <%= @user.telephone_number3 %></td>
			</tr>
			<tr>
				<th >メールアドレス</th>
				<td ><%= @user.email %></td>
			</tr>
		</tbody>
	</table>
	<div class="float-right">
	<span class="btn btn-primary">購入履歴一覧</span>
	<span><%= link_to '編集', edit_user_path, :class => "btn btn-success"%></span>
</div>
</div>
</div>
</div>
</div>