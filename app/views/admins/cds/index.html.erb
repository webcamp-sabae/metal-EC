<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
  <h1 class="h2">商品一覧</h1>
</div>
<div class="mb-8">
  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>ジャケット画像</th>
          <th>品番</th>
          <th>ジャンル</th>
          <th>アーティスト名</th>
          <th>CD名</th>
          <th>枚数</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @cds.each do |cd| %>
          <td> <%= attachment_image_tag cd, :cd_image, :fill, 60, 60,
          fallback: "no_image.jpg", size: "60x60"%></td>
          <td><%= cd.id %></td>
          <td><%= cd.genre.genre %></td>
          <td><%= cd.artist.artist_name %></td>
          <td><%= cd.single_album_name %></td>
          <td><%= cd.stock %></td>
          <td><%= link_to "詳細", admins_cd_path(cd.id), :class => "btn btn-outline-success btn-sm" %></td>
          <td><%= link_to "編集", edit_admins_cd_path(cd.id), :class => "btn btn-outline-info btn-sm" %></td>
          <td><%= link_to "削除", admins_cd_path(cd.id), method: :delete, "data-confirm" => "本当に削除しますか？",
           :class => "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
