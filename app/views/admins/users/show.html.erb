      <label for="tel">電話番号</label>
      <input type="tel" class="form-control" id="tel" value="090-0000-0000" readonly="readonly">
      <div class="invalid-feedback">
        Please enter a valid email address for shipping updates.
      </div>
    </div>

    <div class="mb-3">
      <label for="email">メールアドレス</label>
      <input type="email" class="form-control" id="email" value="metaru-taro@example.com" readonly="readonly">
      <div class="invalid-feedback">
        Please enter a valid email address for shipping updates.
      </div>
    </div>




  <% end %>
</div>

